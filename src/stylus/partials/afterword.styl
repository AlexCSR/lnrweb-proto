$ns = ".afterword"

{$ns}
  &__heading,
  &__subheading
    font-size 34px
    line-height 40px
  &__icon
    margin 8px -3px
    position relative
    +a($m)
      width 60px
      height 60px
    +b($m)
      width 48px
      height 48px
    img
      display block
      position relative
      z-index 2
      width 100%
      height 100%
    &:after
      content "" 
      display block
      position absolute
      z-index 1
      top -2px
      left -5px
      width 133.3333%
      height 136.666667%
      background-image url("/img/common/app-icon-shadow.png") 
      background-size contain
  &__heading
    color #a4a4a4 
    font-weight 300 
  &__subheading
    color #000
    font-weight 500 
    margin-bottom 3px
  &__links
    font-size 17px
    line-height 26px
    a
      display inline-block
      vertical-align middle
      margin-right 20px
      color #ff00d5 
