@keyframes spin
  from
    transform rotate(0deg)
  to
    transform rotate(360deg)

.footer
  background-color #111
  color #fff 
  font-weight normal
  -webkit-font-smoothing subpixel-antialiased
  font-smooth auto
  background-color #111
  box-shadow 0 200px 0 #111
  +a($m)
    position fixed
    z-index 1
    bottom 0
    left 0
    width 100% 
  +b($m)
    width 100%
    overflow hidden
    position relative
    z-index 2
  &__content
    position relative
    +a($t)
      display flex
      align-items flex-start
      height 450px
    +btw($m, $t)
      height 428px
    +b($m)
      padding-bottom 149px
  &__info
    color rgba(#fff, 0.2)
    box-sizing border-box
    flex 0 0 auto
    +a($sd)
      width 33.5%
      padding-right 9.2%
    +btw($t, $sd)
      width 50%
      padding-right 16.6%
    +a($t)
      padding-top 106px
    +a($m)
      text-align center
    &-logo
      font-size 0
      line-height 0
      margin-bottom 33px
      animation spin 60s infinite linear 
      +b($t)
        display none
      img
        display inline-block
        vertical-align top
    &-legal
      font-size 12px
      line-height 18px
      letter-spacing 0.3px
      +b($t)
        position absolute
        bottom 0
        left 0
        width 100% 
        height 115px
        text-align left
      &-name
        text-transform uppercase
  &__nav
    +a($t)
      padding-top 75px
    +b($t)
      padding-top 40px
    +a($sm)
      display flex
      flex-wrap wrap
      flex 1 1 auto
  &__menu
    margin 0
    padding 31px 0 0
    white-space nowrap
    +a($sd)
      width 25%
    +btw($sm, $sd)
      width 50%
    dl,
    dt,
    dd
      padding 0
      margin 0
    dt
      font-size 11px
      line-height 20px
      font-weight 500 
      text-transform uppercase
      color #fff 
      letter-spacing 2.4px
      margin-bottom 8px
      span
        &:after
          content "" 
          display inline-block
          vertical-align baseline
          width 10px
          height 1px
          background-color rgba(#fff, 0.2)
          margin-left 6px
          position relative
          top 1px
    dd
      font-size 15px
      line-height 24px
      font-weight 500 
      a
        display inline-block
        border-bottom none
        color #a4a4a4
