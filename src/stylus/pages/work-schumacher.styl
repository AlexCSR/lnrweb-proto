        +a($d)
          position relative
      .work-single__text-triangle
        border-top-color #fff7b1 
  &__quote
    .container
      min-height 568px
      padding 30px 0 
      box-sizing border-box
      background-color #fff7b1
      color #000
      position relative
      display flex
      align-items center
      +btw($t, $sd)
        width 94.043% 
      +b($t)
        width 92.2% 
    .cover
      position absolute
      top 0
      left 0
      right 0
      bottom 0
      z-index 1
    .work-single__quote
      position relative
      z-index 2
    &.-assignment
      .cover
        +btw($t, $sd)
          background-position 75.5% 50% 
        +b($t)
          opacity 0.13 
          background-position 111% 50% 
      .work-single__quote
        +a($sd)
          padding-left 8.3%
          width 48%
        +btw($t, $sd)
          padding 0 0 26px 6.5%
          width 50%
        &-text
          +a($sd)
            padding-bottom 74px
          +b($sd)
            padding-bottom 71px
          +b($t)
            margin auto
            width 74%
            text-align center
            padding-top 2px
        &-cite
          +a($t)
            margin 0 0 6px 53px
          +b($t)
            margin-left 57.6%
    &.-strategy
      img
        display block
        position absolute
        top 50%
        transform translateY(-50%)
        +a($d)
          left 4.7%
          max-width 39.9842%
        +b($d)
          left 50%
          transform translate(-50%, -50%)
          margin-left -24.5% 
          max-width 46%
      .work-single__quote
        padding-left 50.5%
        width 43%
        &-text
          padding-bottom 74px
        &-cite
          margin 0 0 22px 53px
