        +a($d)
          left 4.7%
          max-width 39.9842%
        +btw($t, $d)
          left 50%
          transform translate(-50%, -50%)
          margin-left -24.5% 
          max-width 46%
        +b($t)
          height 90%
          opacity 0.95 
          &:nth-child(1)
            left 0
            transform translate(-69%, -50%)
          &:nth-child(2)
            right 0
            transform translate(69%, -50%)
      .work-single__quote
        +a($t)
          padding-left 50.5%
