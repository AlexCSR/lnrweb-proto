  &__quote
    .container
      padding 30px 0 
      box-sizing border-box
      background-color #fff7b1
      color #000
      position relative
      display flex
      align-items center
      +btw($t, $sd)
        width 94.043% 
      +b($t)
        width 92.2% 
      +a($m)
        min-height 568px
      +b($m)
        min-height 410px
    .cover
      position absolute
      top 0
      left 0
      right 0
      bottom 0
      z-index 1
    .work-single__quote
      position relative
      z-index 2
    &.-assignment
      .cover
        +btw($t, $sd)
          background-position 75.5% 50% 
        +b($t)
          opacity 0.13 
          background-position 111% 50% 
      .work-single__quote
        +a($sd)
          padding-left 8.3%
          width 48%
        +btw($t, $sd)
          padding 0 0 26px 6.5%
          width 50%
        &-text
          +a($sd)
            padding-bottom 74px
          +btw($m, $sd)
            padding-bottom 71px
          +b($t)
            margin auto
            text-align center
          +btw($m, $t)
            width 74%
            padding-top 2px
          +b($m)
            width 80%
            padding 6px 0 74px
        &-cite
          +a($t)
            margin 0 0 6px 53px
          +btw($m, $t)
            margin-left 57.6%
          +b($m)
            margin-left 52.5%
